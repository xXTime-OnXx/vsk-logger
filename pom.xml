            <id>gitlab-maven-repo-vsk-loggerinterface</id>
            <url>https://gitlab.switch.ch/api/v4/projects/5565/packages/maven</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>    
        <repository>
            <id>gitlab-maven-repo-vsk-stringpersistor</id>
            <url>https://gitlab.switch.ch/api/v4/projects/5606/packages/maven</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>    
        <repository>
            <id>gitlab-maven-vsk-stringpersistor-api</id>
            <url>https://gitlab.com/api/v4/projects/38313718/packages/maven</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>gitlab-maven-repo</id>
            <url>${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/maven</url>
        </repository>
        <snapshotRepository>
            <id>gitlab-maven-repo</id>
            <url>${CI_API_V4_URL}/projects/${CI_PROJECT_ID}/packages/maven</url>
        </snapshotRepository>
        <site>
            <id>gitlab-site</id>
