        <jacocoPlugin.version>0.8.11</jacocoPlugin.version>
        <spotbugsPlugin.version>4.8.3.1</spotbugsPlugin.version>
        <versionsPlugin.version>2.16.2</versionsPlugin.version>

        <asciidoctorj.pdf.version>2.3.12</asciidoctorj.pdf.version>
